<StackPane fx:id="rootPane" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="wbh.wbh_projekt_privatebuchhaltung.controller.Controller_goals">

    <VBox alignment="TOP_CENTER" spacing="10">
        <Label styleClass="header-label" text="Ziel Ãœbersicht" />

        <TableView fx:id="goalTable" styleClass="table-view">

            <columns>
                <TableColumn fx:id="completedColumn" text="Erreicht" />
                <TableColumn fx:id="nameColumn" text="Name" />
                <TableColumn fx:id="descriptionColumn" text="Beschreibung" />
